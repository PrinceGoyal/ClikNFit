<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TRAN_WHITE"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:orientation="vertical"
            >

            <com.cliknfit.customviews.SemiBoldText
                android:id="@+id/tv_eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="LA 10K MARATHON"
                android:textColor="@color/BUTTON_PINK_COLOR"/>


            <com.cliknfit.customviews.LightText
                android:id="@+id/tv_eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="JULY 28,2016 Tuesday"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/et_szSmall"/>


            <com.cliknfit.customviews.LightText
                android:id="@+id/tv_eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Description lorem ipsum dolor sum Description lorem ipsum dolor sum"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/et_szSmall"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <com.cliknfit.customviews.LightText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Trainer | "
                    android:textColor="@color/BUTTON_PINK_COLOR"
                    android:textSize="@dimen/et_szSmall"/>

                <com.cliknfit.customviews.LightText
                    android:id="@+id/tv_trainerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="John Deo"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/et_szSmall"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <com.cliknfit.util.RoundedImageView
        android:id="@+id/img_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:translationZ="@dimen/cast_tracks_chooser_dialog_row_text_size"
        android:background="@drawable/lightborder"/>




</RelativeLayout>