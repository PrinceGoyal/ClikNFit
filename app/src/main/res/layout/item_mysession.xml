<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="7dp"
        card_view:cardBackgroundColor="@color/TRAN_WHITE"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TRAN_WHITE"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            >

            <com.cliknfit.customviews.RegulerText
                android:id="@+id/tv_trainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Trainer Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/et_sz"/>


            <com.cliknfit.customviews.LightText
                android:id="@+id/tv_DateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="JULY 28,2016 Tuesday"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/et_szSmall"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <com.cliknfit.customviews.RegulerText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/et_sz"/>

                <View
                    android:layout_width="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:background="@color/BUTTON_PINK_COLOR"/>

                <com.cliknfit.customviews.RegulerText
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="01:00 PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/et_szSmall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                >

                <com.cliknfit.customviews.RegulerText
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="End    "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/et_sz"/>
                <View
                    android:layout_width="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:background="@color/BUTTON_PINK_COLOR"/>

                <com.cliknfit.customviews.RegulerText
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="02:00 PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/et_szSmall"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <com.cliknfit.customviews.RegulerText
                    android:id="@+id/txt"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="Status"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/et_sz"/>

                <View
                    android:id="@+id/vw"
                    android:layout_toRightOf="@+id/txt"
                    android:layout_width="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:background="@color/BUTTON_PINK_COLOR"/>

                <com.cliknfit.customviews.RegulerText
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vw"
                    android:singleLine="true"
                    android:text="Request accepted"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/et_szSmall"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="10dp"
                    android:visibility="gone"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_circle"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:translationZ="18sp"
        app:riv_border_color="#fff"
        app:riv_border_width="2dip"
        app:riv_corner_radius="5dp"
        app:riv_mutate_background="true"
        />


    <com.cliknfit.customviews.RegulerText
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:singleLine="true"
        android:padding="5dp"
        android:text="View Comments"
        android:textColor="@color/BUTTON_PINK_COLOR"
        android:textSize="@dimen/et_szSmall"
        android:translationZ="@dimen/activity_horizontal_margin"/>

</RelativeLayout>