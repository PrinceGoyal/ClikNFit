<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BACK">


    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/comment_bg"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null" >




        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="7dp"
            card_view:cardBackgroundColor="@color/TRAN_WHITE"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/TRAN_WHITE"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                >

                <com.cliknfit.customviews.RegulerText
                    android:id="@+id/tv_trainerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Trainer Name"
                    android:textSize="@dimen/et_sz"
                    android:textColor="@color/colorPrimaryDark"/>


                <com.cliknfit.customviews.LightText
                    android:id="@+id/tv_DateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="JULY 28,2016 Tuesday"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/et_szSmall"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/onestar"
                        android:src="@drawable/emptypink_star"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/twostar"
                        android:src="@drawable/emptypink_star"
                        android:layout_margin="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/threestar"
                        android:src="@drawable/emptypink_star"
                        android:layout_margin="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/fourstar"
                        android:src="@drawable/emptypink_star"
                        android:layout_margin="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/fivestar"
                        android:src="@drawable/emptypink_star"
                        android:layout_margin="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </LinearLayout>


                <com.cliknfit.customviews.LightText
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit.Lorem ipsum dolor sit amet, consectetuer adipiscing. "
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/et_szSmall"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile_pic"
            android:src="@drawable/placeholder"
            android:scaleType="fitCenter"
            app:riv_corner_radius="5dp"
            app:riv_border_width="2dip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:translationZ="18sp"
            app:riv_border_color="#fff"
            android:layout_gravity="center_vertical"
            app:riv_mutate_background="true"
            />



    </RelativeLayout>


</RelativeLayout>
